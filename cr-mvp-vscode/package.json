{
  "name": "coderev-akshita",
  "displayName": "CodeRev Akshita",
  "description": "Checklist-driven AI code review VS Code extension",
  "version": "0.0.1",
  "publisher": "akshitachoudhary",
  "engines": {
    "vscode": "^1.107.0"
  },
  "activationEvents": [
    "onCommand:cr-mvp-vscode.runReview",
    "onView:checklistView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cr-mvp-vscode.runReview",
        "title": "Run Code Review"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "checklistView",
          "name": "Checklist Review"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "vscode:prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^24.10.3",
    "@types/vscode": "^1.107.0",
    "typescript": "^5.9.3"
  }
}
